@model List<EShop.WEB.Models.OptionValueManagerVM>

<table id="option-value" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <td class="text-center">الاسم</td>
            <td class="text-center">القيمة</td>
            <td class="text-center"></td>

        </tr>
    </thead>
    <tbody>
        @foreach (var optionValue in Model)
        {
            <tr>
                <td class="text-center">
                    @*<label class="col-sm-2 control-label">الاسم العربي</label>*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <img class="color-img" src="~/Assets/images/flag-arabic.jpg" />
                        </span>
                        <input id="op-arabic" type="text" name="ArabicName" value="@optionValue.ArabicName" placeholder="الاسم العربي" class="form-control" disabled>
                    </div>
                    @*<label class="col-sm-2 control-label">الاسم الانكليزي</label>*@
                    <div class="input-group">
                        <span class="input-group-addon">
                            <img src="~/Assets/images/flag-english.jpg" />
                        </span>
                        <input id="op-english" type="text" name="EnglishName" value="@optionValue.EnglishName" placeholder="English Name" class="form-control" disabled>
                    </div>
                </td>
                <td class="text-center">@optionValue.Value</td>
                <td class="text-center"></td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr id="option-value-row1">
            <td class="text-center">
                @*<input type="hidden" name="option_value[1][option_value_id]" value="">*@
                <div class="input-group">
                    <span class="input-group-addon">
                        <img src="~/Assets/images/flag-arabic.jpg" />

                    </span>
                    <input type="text" name="ArabicName" value="" placeholder="الاسم العربي" data-val="true" data-val-required="الاسم العربي مطلوب" aria-required="true" aria-describedby="name-error" aria-invalid="true" class="form-control">
                </div>
                @*<input type="hidden" name="option_value[1][option_value_id]" value="">*@

                <div class="input-group">
                    <span class="input-group-addon">
                        <img src="~/Assets/images/flag-english.jpg" />
                    </span>
                    <input type="text" name="EnglishName" value="" placeholder="English Name" data-val="true" data-val-required="الاسم الانكليزي مطلوب" aria-required="true" aria-describedby="name-en-error" aria-invalid="true" class="form-control">
                </div>
            </td>
            <td class="text-right">
                <input id="color-value" type="text" name="Value" value="" placeholder="القيمة" class="form-control">

            </td>
            <td class="text-left">
                <button id="add-op-value" type="button" data-toggle="tooltip" title="إضافة" class="btn btn-danger">
                    <i class="fa fa-minus-circle">
                    </i>
                </button>
            </td>
        </tr>
    </tfoot>
</table>
<script>
    $('.color-img').on('click', function () {
        var src = $(this).attr('src');
        $('#img-full-size').attr('src', src);
        $('#imgModal').modal('show');
    });
</script>
<script>
    $(document).ready(function () {
        $('#add-op-value').on('click', function (e) {
            e.preventDefault();

            $.ajax({
                url: '@Url.Action("AddOptionValue", "manageOption")',
                method: 'post',
                data: $('#option-value-form').serialize(),
                success: function (data) {
                    console.log(data);
                    $('#values-div').html(data);

                }
            });
        });
    });
</script>