                    //document.getElementById("topCart").


                    //$("#topCart").css(new {transform:"scaleY(1) !important"});
                    //$("#topCart").addClass("ViewCart");


                }
            });

        });

    });
    $(function() {
        $('.sizeColor').change(function() {
            debugger;
            $('#QuickFilterForm').submit();
        });
    });
</script>

